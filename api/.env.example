# HelloVM AI Funland Backend Configuration
DEBUG=true
HOST=0.0.0.0
PORT=8000

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:5173", "http://localhost:4173", "http://127.0.0.1:5173"]

# Hardware Settings
AUTO_DETECT_HARDWARE=true
HARDWARE_SCAN_INTERVAL=30
ENABLE_OPENVINO=true
ENABLE_CUDA=true
ENABLE_NPU=true

# Model Settings
DEFAULT_MODEL_ID=qwen2.5-7b-instruct-q4
MAX_CONCURRENT_DOWNLOADS=3
DOWNLOAD_CHUNK_SIZE=8192

# Modelscope API (optional)
MODELSCOPE_API_KEY=
MODELSCOPE_BASE_URL=https://www.modelscope.cn/api/v1

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# WebSocket Settings
WS_MAX_CONNECTIONS=100
WS_PING_INTERVAL=30
WS_PING_TIMEOUT=10

# Security (change in production)
API_KEY=
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090